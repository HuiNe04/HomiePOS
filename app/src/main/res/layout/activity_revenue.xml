<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvRevenueTitle"
        android:text="Doanh thu cửa hàng"
        android:textColor="#FFF3E0"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Tổng nhập -->
    <TextView
        android:id="@+id/tvTotalImport"
        android:text="Tổng Nhập: 0₫"
        android:textColor="#BCAAA4"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Tổng xuất -->
    <TextView
        android:id="@+id/tvTotalExport"
        android:text="Tổng Xuất: 0₫"
        android:textColor="#BCAAA4"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Lợi nhuận -->
    <TextView
        android:id="@+id/tvProfit"
        android:text="Lợi nhuận: 0₫"
        android:textColor="#FFF3E0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Biểu đồ doanh thu -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartRevenue"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</LinearLayout>
