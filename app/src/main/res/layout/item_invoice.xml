<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#2E2E2E"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Tên hóa đơn -->
    <TextView
        android:id="@+id/tvInvoiceName"
        android:text="Tên hóa đơn"
        android:textColor="#FFCC80"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Loại và ngày -->
    <TextView
        android:id="@+id/tvInvoiceInfo"
        android:text="Loại: Nhập | Ngày: 2025-10-23"
        android:textColor="#FFE0B2"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Tổng và VAT -->
    <TextView
        android:id="@+id/tvInvoiceTotal"
        android:text="Tổng: 1.000.000₫ | VAT: 10%"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
